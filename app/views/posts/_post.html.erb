<div class="row">
  <div class = 'span8 well'>
    <%= render post.categories %>
    <h4><%= link_to post.title, fix_url(post.url) %></h4>
    <p><%= post.description %></p>
    <p>
      <span class='quiet'>posted by</span> <%=post.creator.username %>
      <small>created at <%= display_datetime(post.created_at) %></small>
    </p>
    <small>
      <span>
        <%= link_to "#{post.comments.size} comments", post_path(post) %>
      </span> 
    </small>
    <p><%= link_to "edit post", edit_post_path(post) %></p>
  </div>
</div>